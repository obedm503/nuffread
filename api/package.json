{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "sync": "npm run build && ts-node ../node_modules/typeorm/cli.js schema:sync",
    "migrate": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "dev": "nodemon --watch src --ext ts --exec 'ts-node --project tsconfig.json --pretty --files src/main'",
    "build": "NODE_ENV=production tsc --project tsconfig.json",
    "start": "node --optimize_for_size --max_old_space_size=512 --gc_interval=100 dist/main.js"
  },
  "engines": {
    "node": "^10.10.0"
  },
  "dependencies": {
    "@sendgrid/client": "^6.4.0",
    "@sendgrid/mail": "^6.4.0",
    "apollo-server-express": "^2.8.1",
    "atob": "^2.1.2",
    "bcryptjs": "^2.4.3",
    "btoa": "^1.2.1",
    "class-validator": "^0.9.1",
    "connect-pg-simple": "^5.0.0",
    "dataloader": "^1.4.0",
    "express": "^4.17.0",
    "express-session": "^1.16.2",
    "graphql": "^14.3.0",
    "graphql-tools": "^4.0.4",
    "isomorphic-fetch": "^2.2.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "stripe": "^7.0.0",
    "typeorm": "^0.2.17"
  },
  "devDependencies": {
    "@types/atob": "^2.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/btoa": "^1.2.3",
    "@types/connect-pg-simple": "^4.2.0",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.11",
    "@types/node": "^10.12.21",
    "@types/stripe": "^6.30.0",
    "@types/uuid": "^3.4.4",
    "dotenv-safe": "^6.1.0",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "3.5.3"
  }
}
