{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typeorm": "ts-node ../node_modules/typeorm/cli.js",
    "migrate": "yarn typeorm migration:generate --config ormconfig.ts --name",
    "dev": "npm run dev:build & npm run dev:start",
    "dev:build": "tsc --project tsconfig.json --watch --pretty --preserveWatchOutput",
    "dev:start": "nodemon --delay 500ms --watch dist dist/main.js",
    "build": "NODE_ENV=production tsc --project tsconfig.json --pretty",
    "start": "NODE_ENV=production node --optimize_for_size --max_old_space_size=512 --gc_interval=100 dist/main.js"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.13",
    "atob": "^2.1.2",
    "bcryptjs": "^2.4.3",
    "btoa": "^1.2.1",
    "class-validator": "^0.12.2",
    "connect-pg-simple": "^6.0.1",
    "dataloader": "^2.0.0",
    "dotenv-safe": "^8.1.0",
    "express": "^4.17.0",
    "express-session": "^1.16.2",
    "graphql": "^15.0.0",
    "graphql-query-complexity": "^0.5.0",
    "graphql-tools": "^5.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.2.0",
    "pino": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.21"
  },
  "devDependencies": {
    "@types/atob": "^2.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/btoa": "^1.2.3",
    "@types/connect-pg-simple": "^4.2.0",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.15.16",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^12.12.39",
    "@types/pino": "^6.0.1",
    "@types/uuid": "^3.4.4",
    "nodemon": "^2.0.2",
    "pino-pretty": "^4.0.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
