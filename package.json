    }
  },
  "dependencies": {
    "dotenv-safe": "^8.1.0",
    "nps": "^5.10.0",
    "nps-utils": "^1.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "husky": "^4.2.3",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": "12.16.1",
    "yarn": "1.22.4"
  }
}
