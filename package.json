{
  "private": true,
  "workspaces": [
    "api",
    "admin",
    "web"
  ],
  "scripts": {
    "dev": "nps dev",
    "build:api": "NODE_ENV=production nps deploy.api",
    "heroku-postbuild": "npm run build:api",
    "build:web": "NODE_ENV=production nps deploy.web",
    "build": "nps build",
    "start": "nps start"
  },
  "husky": {
    "hooks": {
